<%= render "/admins/users/adminHeader_fields" %>

<div class="adminCouponWrapper mb-lg-5">
  <div class="container">
    <div class="row">
      <div class="adminCouponBox col-lg-6 offset-lg-3 border rounded p-lg-5 mt-lg-5">
        <h2 class="border_bottom text-center font-bold">クーポン発行</h2>
        <p class="font-minimum text-center">クーポンは[50%割引],[10%割引],[500円割引]がランダムの三名に発行されます</p>
        <div class="row adminNewCoupon">
          <%= form_for @coupon,url: admins_coupons_path,method: :post do |f| %>
            <%= f.submit "発行",class: "btn btn-pink pl-lg-3 pr-lg-3 offset-lg-4 col-lg-4","data-confirm" => "本当に発行しますか？" %>
          <% end %>
        </div>
      </div>
    </div>
    <h2 class="mt-lg-5 mb-lg-4 text-center">クーポンを受け取ったユーザー</h2>
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>ユーザーネーム</th>
          <th>本名</th>
          <th>発行日</th>
          <th>種類</th>
        </tr>
      </thead>
      <tbody>
        <% @coupons.each do |coupon| %>
          <tr class="table-text orderCheck">
            <td><%= coupon.user.id %></td>
            <td><%= coupon.user.user_name %></td>
            <td><%= coupon.user.first_name %><%= coupon.user.last_name %></td>
            <td><%= coupon.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= coupon.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>