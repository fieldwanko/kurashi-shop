<%= render "adminHeader_fields" %>
<div class="adminUsersWrapper">
  <div class="container mt-sm-5">
    <div class="row">
      <p class="col-lg-3">検索条件を設定して下さい⇨</p>
      <p class="optionA col-lg-1 btn border mr-lg-2 btn-sky">ID</p>
      <p class="optionB col-lg-1 btn border mr-lg-2">ユーザ名</p>
      <p class="optionC col-lg-1 btn border mr-lg-2">電話番号</p>
      <p class="optionD col-lg-1 btn border mr-lg-2">住所</p>
    </div>
    <div class="row mb-lg-5">
      <span class="col-lg-2 text-right offset-lg-1"><%=  fa_icon("search-plus 2x") %></span>
        <%= search_form_for @search,url: admins_users_path,class: "col-lg-7 searchA" do |f| %>
          <%= f.number_field :id_eq,class: "searchInput searchA col-lg-9 rounded",required: true %>
          <%= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchA" %>
        <% end %>
        <%= search_form_for @search,url: admins_users_path,class: "col-lg-7 searchB" do |f| %>
          <%= f.text_field :user_name_cont,class: "searchInput searchB col-lg-9 rounded",required: true %>
          <%= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchB" %>
        <% end %>
        <%= search_form_for @search,url: admins_users_path,class: "col-lg-7 searchC" do |f| %>
          <%= f.telephone_field :tel_cont,class: "searchInput searchC col-lg-9 rounded",required: true %>
          <%= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchC" %>
        <% end %>
        <%= search_form_for @search,url: admins_users_path,class: "col-lg-7 searchD" do |f| %>
          <%= f.text_field :address_cont,class: "searchInput searchD col-lg-9 rounded",required: true %>
          <%= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchD" %>
        <% end %>
    </div>
    <%# if @users %>
      <table class="table table-striped table-hover">
        <thead class="thead-light">
          <tr>
            <th>ID</th>
            <th>ユーザーネーム</th>
            <th>本名</th>
            <th>郵便番号</th>
            <th>住所</th>
            <th>電話番号</th>
          </tr>
        </thead>
        <tbody>
          <% @result.each do |user| %>
            <tr class="table-text orderCheck">
              <td><%= user.id %></td>
              <td><%= user.user_name %></td>
              <td><%= user.first_name %><%= user.last_name %></td>
              <td><%= user.postal_code %></td>
              <td><%= user.address %></td>
              <td><%= user.tel %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <%# else %>
      <!-- <div class="container">
        <h2 class="text-center">ユーザーはまだいません</h2>
      </div> -->
    <%# end %>
  </div>
</div>