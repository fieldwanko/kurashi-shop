<%= render "sell_users/products/sellHeader_fields" %>
<div class="sellOrderDetailWrapper">
  <div class="container mt-sm-5">
    <!-- <div class="row">
      <p class="col-lg-4">検索条件を設定して下さい⇨</p>
      <p class="optionA col-lg-1 btn border mr-lg-2 btn-sky">ID</p>
      <p class="optionB col-lg-1 btn border mr-lg-2">届け先</p>
      <p class="optionC col-lg-2 btn border mr-lg-2">配送状況</p>
    </div> -->
    <!-- <div class="row border-bottom pb-lg-3">
      <p class="col-lg-2 font-bold">購入者一覧</p>
      <span class="col-lg-1 text-right"><%#=  fa_icon("search-plus 2x") %></span> -->
      <%#= search_form_for @search,url: sell_users_order_appends_path,class: "col-lg-7 searchA" do |f| %>
        <%#= f.number_field :id_eq,class: "searchInput searchA col-lg-9 rounded",required: true %>
        <%#= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchA" %>
      <%# end %>
      <%#= search_form_for @search,url: sell_users_order_appends_path,class: "col-lg-7 searchB" do |f| %>
        <%#= f.text_field :,class: "searchInput searchB col-lg-9 rounded",required: true %>
        <%#= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchB" %>
      <%# end %>
      <%#= search_form_for @search,url: sell_users_order_appends_path,class: "col-lg-7 searchC" do |f| %>
        <%#= f.select :status_eq,class: "searchInput searchC col-lg-9 rounded",required: true %>
        <%#= f.submit "検索",class: "btn btn-pink pl-lg-3 pr-lg-3 searchC" %>
      <%# end %>
    <!-- </div> -->
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th>注文ID</th>
          <th>購入者</th>
          <th>購入商品</th>
          <th>数量</th>
          <th>合計金額</th>
          <th>配送状況</th>
          <th>更新</th>
        </tr>
      </thead>
      <tbody>
        <% @result.each do |order| %>
        <% @append = order.order_append %>
            <tr class="table-text orderCheck" id="order_<%= order.id %>">
              <td><%= @append.id %></td>
              <td><%= @append.user.first_name %><%= @append.user.last_name %></td>
              <td class="text-limit"><%= order.product.title %></td>
              <td><%= order.quantity %></td>
              <td><%= @append.total %></td>
              <%= form_for @append,url:sell_users_order_append_path(@append.id),method: :put do |f| %>
              <td>
                <% if @append.status == "配送準備中" %>
                  <span><%= f.select :status, options_for_select(OrderAppend.statuses.keys),{},{class: "btn btn-sky selectCss"} %></span></p>
                <% elsif @append.status == "配送中" %>
                  <span><%= f.select :status, options_for_select(OrderAppend.statuses.keys),{},{class: "btn btn-pink selectCss"} %></span></p>
                <% elsif @append.status == "配送済み" %>
                  <span><%= f.select :status, options_for_select(OrderAppend.statuses.keys),{},{class: "btn btn-gray selectCss"} %></span>
                <% elsif @appned.status == "問題が発生" %>
                  <span><%= f.select :status, options_for_select(OrderAppend.statuses.keys),{},{class: "btn btn-dangar selectCss"} %></span>
                <% end %>
              </td>
              <td>
                <%= f.submit "変更確定",class: "btn btn-sky" %>
              </td>
              <% end %>
            </tr>
            <div class="detailModalWrapper" id="modal_order_<%= order.id %>">
              <div class="detailForm">
                <div class="close-modal">
                  <%= fa_icon("times 2x") %>
                </div>
                <div class="detailAppendBox">
                  <h4 class="border-bottom pb-lg-3 font-bold text-center">宛先情報</h4>
                  <h3 class="detailAppendText">宛名:<span class="ml-lg-5"><%= @append.name %></span></h3>
                  <h5 class="detailAppendText">かな表記<span class="ml-lg-5"><%= @append.details_name %></span></h5>
                  <h5 class="detailAppendText">郵便番号<span class="ml-lg-5"><%= @append.postal_code %></span></h5>
                  <p class="text-turn detailAppendText">届け先<span class="ml-lg-5"><%= @append.address %></span></p>
                </div>
              </div>
            </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>